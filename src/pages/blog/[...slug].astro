---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.id },
    props: post,
  }));
}

type Props = CollectionEntry<'blog'>;

const { data, id } = Astro.props;
const { Content } = await render(Astro.props);
---

<html lang="en">
  <head>
    <BaseHead title={`${data.title} - VividWorld`} description={data.description} />
    <style>
      .prose {
        max-width: 65ch;
        margin: 0 auto;
      }
      .prose h2 {
        @apply text-2xl font-bold text-white mt-8 mb-4;
      }
      .prose h3 {
        @apply text-xl font-bold text-white mt-6 mb-3;
      }
      .prose p {
        @apply text-neutral-400 mb-4 leading-relaxed;
      }
      .prose a {
        @apply text-blue-400 hover:text-blue-300 transition-colors;
      }
      .prose ul {
        @apply list-disc list-inside mb-4 text-neutral-400;
      }
      .prose ol {
        @apply list-decimal list-inside mb-4 text-neutral-400;
      }
      .prose code {
        @apply bg-neutral-800 px-2 py-1 rounded text-sm text-blue-300;
      }
      .prose pre {
        @apply bg-neutral-900 border border-neutral-700 text-white p-4 rounded-lg overflow-x-auto mb-4;
      }
      .prose pre code {
        @apply bg-transparent p-0;
      }
      .prose blockquote {
        @apply border-l-4 border-blue-500 pl-4 italic text-neutral-300 my-4;
      }
      .prose strong {
        @apply text-white;
      }
    </style>
  </head>

  <body class="min-h-screen flex flex-col bg-neutral-950">
    <Header />
    <main class="flex-grow pt-16">
      <article class="relative">
        <div class="absolute inset-0 grid-bg opacity-10"></div>

        {data.heroImage && (
          <div class="relative aspect-video w-full overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-b from-transparent via-neutral-950/50 to-neutral-950"></div>
            <img src={data.heroImage} alt="" class="w-full h-full object-cover" />
          </div>
        )}
        <div class="relative section">
          <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-8">
              <p class="text-neutral-500 mb-2">
                <FormattedDate date={data.pubDate} />
                {data.updatedDate && (
                  <span class="italic ml-2">
                    (Updated: <FormattedDate date={data.updatedDate} />)
                  </span>
                )}
              </p>
              <h1 class="text-3xl md:text-4xl font-bold text-white glow-text">{data.title}</h1>
            </div>
            <div class="prose">
              <Content />
            </div>
          </div>
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>