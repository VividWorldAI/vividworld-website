---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Blog - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
  </head>
  <body class="min-h-screen flex flex-col bg-neutral-950">
    <Header />
    <main class="flex-grow pt-16">
      <section class="relative section bg-neutral-950">
        <div class="absolute inset-0 grid-bg opacity-10"></div>

        <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-12">
            <div class="inline-flex items-center px-4 py-2 rounded-full bg-primary/10 border border-primary/20 backdrop-blur-sm mb-6">
              <span class="text-sm text-blue-300">Latest Updates</span>
            </div>
            <h1 class="text-4xl md:text-5xl font-bold text-white mb-4 glow-text">Blog</h1>
            <p class="text-xl text-neutral-400">
              Latest updates and insights from VividWorld.
            </p>
          </div>

          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {posts.map((post, index) => (
              <a href={`/blog/${post.id}/`} class="card-glass group block animate-fade-in" style={`animation-delay: ${index * 0.1}s;`}>
                {post.data.heroImage && (
                  <div class="aspect-video mb-4 overflow-hidden rounded-lg">
                    <img
                      src={post.data.heroImage}
                      alt=""
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-200"
                    />
                  </div>
                )}
                <h2 class="text-xl font-bold text-white mb-2 group-hover:text-blue-300 transition-colors">
                  {post.data.title}
                </h2>
                <p class="text-neutral-400 mb-3 line-clamp-2 group-hover:text-neutral-300 transition-colors">
                  {post.data.description}
                </p>
                <p class="text-sm text-neutral-500">
                  <FormattedDate date={post.data.pubDate} />
                </p>
              </a>
            ))}
          </div>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>