<section id="contact" class="section bg-neutral-950 relative">
  <div class="absolute inset-0 grid-bg opacity-10"></div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl mx-auto text-center mb-12">
      <h2 class="section-title animate-fade-in">Get in Touch</h2>
      <p class="section-subtitle mx-auto animate-fade-in" style="animation-delay: 0.1s;">
        Have questions? We'd love to hear from you.
      </p>
    </div>

    <form
      onsubmit="event.preventDefault(); event.target.reset(); alert('Thank you for your message!');"
      class="max-w-xl mx-auto space-y-4"
    >
      <div class="animate-fade-in" style="animation-delay: 0.2s;">
        <label for="name" class="block text-sm font-medium text-neutral-300 mb-1">Name</label>
        <input
          type="text"
          id="name"
          name="name"
          required
          class="w-full px-4 py-3 bg-neutral-900/80 border border-neutral-700 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all text-white placeholder-neutral-500"
          placeholder="Your name"
        />
      </div>

      <div class="animate-fade-in" style="animation-delay: 0.3s;">
        <label for="email" class="block text-sm font-medium text-neutral-300 mb-1">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          required
          class="w-full px-4 py-3 bg-neutral-900/80 border border-neutral-700 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all text-white placeholder-neutral-500"
          placeholder="you@example.com"
        />
      </div>

      <div class="animate-fade-in" style="animation-delay: 0.4s;">
        <label for="message" class="block text-sm font-medium text-neutral-300 mb-1">Message</label>
        <textarea
          id="message"
          name="message"
          rows="5"
          required
          class="w-full px-4 py-3 bg-neutral-900/80 border border-neutral-700 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all text-white placeholder-neutral-500 resize-none"
          placeholder="How can we help you?"
        ></textarea>
      </div>

      <button
        type="submit"
        class="btn-glow w-full animate-fade-in"
        style="animation-delay: 0.5s;"
      >
        Send Message
      </button>
    </form>
  </div>
</section>