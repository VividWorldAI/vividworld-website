---
import { SITE_TITLE } from '../consts';

const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/', label: 'Home' },
  { href: '/seem', label: 'Seem' },
  { href: '/vtalk', label: 'VTalk' },
  { href: '/about', label: 'About' },
  { href: '/blog', label: 'Blog' },
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-neutral-950/80 backdrop-blur-md border-b border-neutral-800">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <a href="/" class="flex items-center space-x-3">
        <img src="/logo.png" alt="VividWorld" class="h-8 w-auto" />
        <span class="text-xl font-bold text-white">{SITE_TITLE}</span>
      </a>

      <div class="hidden md:flex items-center space-x-8">
        {navItems.map(item => (
          <a
            href={item.href}
            class:list={[
              'text-sm font-medium transition-all duration-200',
              currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href))
                ? 'text-blue-400'
                : 'text-neutral-400 hover:text-white'
            ]}
          >
            {item.label}
          </a>
        ))}
      </div>

      <div class="md:hidden">
        <button
          type="button"
          id="mobile-menu-button"
          class="text-neutral-400 hover:text-white"
          aria-label="Toggle menu"
        >
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <div id="mobile-menu" class="hidden md:hidden pb-4">
      {navItems.map(item => (
        <a
          href={item.href}
          class:list={[
            'block py-2 text-sm font-medium transition-colors duration-200',
            currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href))
              ? 'text-blue-400'
              : 'text-neutral-400 hover:text-white'
          ]}
        >
          {item.label}
        </a>
      ))}
    </div>
  </nav>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>

<style>
  header {
    margin: 0;
  }
</style>
